
  <div class="row medium-8 large-3 columns">
<form class="login-form">
  <div class="form-icons">
    <h4>Login to your account!</h4>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-envelope"></i>
      </span>
      <input class="input-group-field"  id="email-login" type="text" placeholder="Email">
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <input class="input-group-field" id="pass-login"  type="password" placeholder="Password">
    </div>
  </div>
  
  <input class="button expanded" type="submit" value="Login">
</form>

<form class="sign-up-form">
  <div class="form-icons">
    <h4>Become A Member</h4>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-user"></i>
      </span>
      <input class="input-group-field" id="user-name" type="text" placeholder="User name">
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-envelope"></i>
      </span>
      <input class="input-group-field"  id="email" type="text" placeholder="Email">
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <input class="input-group-field" id="pass" type="text" placeholder="Password">
    </div>
  </div>

 
  <input class="button expanded" type="submit" value="Sign up">
</form>

</div>


<script src="/javascript/login.js"></script>